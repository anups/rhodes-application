<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Project</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @project.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Project code: </td>
                <td class="itemValue"><input type="text" name="project[project_code]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Project name: </td>
                <td class="itemValue"><input type="text" name="project[project_name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Project description: </td>
                <td class="itemValue"><input type="text" name="project[project_description]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Project duration: </td>
                <td class="itemValue"><input type="text" name="project[project_duration]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
